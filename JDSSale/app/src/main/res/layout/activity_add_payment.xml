<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_bg_2"
    tools:context="com.jdssale.AddPaymentActivity">

    <LinearLayout
        android:id="@+id/ll_toolbar"
        android:background="@drawable/inside_top_bg"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <include layout="@layout/toolbar"></include>
    </LinearLayout>
    
    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <TextView
                android:textSize="14sp"
                android:textColor="@color/colorBlack"
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
            <TextView
                android:id="@+id/tv_price"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Reference No: "
                android:textSize="12sp"
                android:textColor="@color/colorBlack"
                android:id="@+id/tv_refer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_toRightOf="@+id/tv_refer"
                android:id="@+id/tv_refer_no"
                android:textSize="14sp"
                android:textColor="@color/brown_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:background="@color/colorGray"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp">

        </View>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Pending Payment"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_pend_pay"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            <EditText
                android:inputType="number|numberDecimal"
                android:paddingLeft="5dp"
                android:background="@drawable/search_bg"
                android:hint="0"
                android:textSize="12sp"
                android:textColor="@color/colorBlack"
                android:id="@+id/et_pay"
                android:layout_width="match_parent"
                android:layout_height="35dp" />

                <TextView
                    android:text="Add the payment you have received in hand"
                    android:textSize="11sp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <Button
                android:text="SUBMIT"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:id="@+id/bt_submit"
                android:textSize="12sp"
                android:background="@color/green"
                android:textColor="@color/colorWhite"
                android:layout_width="0dp"
                android:layout_height="35dp" />

        </LinearLayout>
        <View
            android:background="@color/colorGray"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp">
        </View>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_payment"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</LinearLayout>
