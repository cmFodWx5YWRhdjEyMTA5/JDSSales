<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:paddingBottom="3dp"
    android:paddingTop="3dp">

    <LinearLayout
        android:background="@color/light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/ll__no"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:background="@color/driver"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_date"
                android:textSize="24sp"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_cirle"
            android:layout_weight="2.1"
            android:orientation="vertical">


            <TextView
                android:textSize="16sp"
                android:id="@+id/tv_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/navy" />

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Bill/Reference No: "
                android:textColor="@color/navy" />

            <TextView
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="10dp"
                android:id="@+id/tv_paid_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="eeeeeff"
                android:textColor="@color/navy" />

        </LinearLayout>

        <RelativeLayout
            android:paddingBottom="10dp"
            android:gravity="bottom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_call"
                android:padding="7dp"
                android:background="@drawable/navy_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:paddingLeft="5dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_call"
                    android:tint="@color/colorWhite"
                    android:src="@drawable/call"
                    android:layout_width="17dp"
                    android:layout_height="17dp" />

            <TextView
                android:paddingRight="5dp"
                android:textSize="12sp"
                android:layout_marginLeft="3dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_call"
                android:text="CALL"
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite" />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>