<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg_2"
    tools:context="com.jdssale.AllQuoteActivity">

    <LinearLayout
        android:id="@+id/ll_toolbar"
        android:background="@drawable/inside_top_bg"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <include layout="@layout/toolbar"></include>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_head"
        android:background="@color/actionbar_opacity"
        android:padding="2dp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:text="+ ADD QUOTATION"
        android:layout_below="@+id/ll_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_below="@+id/tv_head"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_date"
            android:textColor="@color/colorBlack"
            android:text="07-07-2108"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:text="Item List"
            android:layout_below="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_total"
            android:textColor="@color/colorBlack"
            android:text="Total"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="16sp"
            android:id="@+id/tv_price"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorBlack"
            android:text="Item List"
            android:layout_below="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/rv_items"
        android:layout_above="@+id/ll_button"
        android:layout_below="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/ll_button"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_submit"
            android:layout_marginRight="0.5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="10dp"
            android:background="@color/buttoncolor"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_submit"
                android:layout_centerVertical="true"
                android:text="SUBMIT QUOTATION"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="0.5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="10dp"
            android:background="@color/buttoncolor"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_cart"
                android:adjustViewBounds="true"
                android:src="@drawable/cart_icon"
                android:layout_width="22dp"
                android:layout_height="22dp" />

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_cart"
                android:id="@+id/tv_count"
                android:text="ITEMS"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
